<Window x:Class="MedievalWarfare.Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Medieval Warfare" Width="1050" Height="850">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="20" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <!--<Grid.ColumnDefinitions>
            <ColumnDefinition Width="50" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        -->
        <Menu Name="gameMenu" IsMainMenu="True" Width="1050"
              HorizontalAlignment="Left" VerticalAlignment="Top" >
            <MenuItem Header="_Game">
                <MenuItem Header="_New Map" Name="menu_new"
                          Click="menu_new_Click"/>
                <MenuItem Header="_Draw Hexes" Name="menu_load"
                          Click="drawHexes_Click"/>
                <Separator />
                <MenuItem Header="_Exit" Name="menu_exit"
                          Click="menu_exit_Click"/>
            </MenuItem>
        </Menu>
        <ScrollViewer Name="mapScroller" Grid.Row="1" Grid.Column="1" 
                      HorizontalScrollBarVisibility="Auto"
                      HorizontalAlignment="Left"
                      VerticalAlignment="top"
                      Width="1050" Height="780" >
            <Canvas Name="mapCanvas" Width="1024" Height="768" >
            </Canvas>
        </ScrollViewer>
        <!--<TextBox Text="TBD" x:Name="tbBox1" HorizontalAlignment="Center" VerticalAlignment="Center"  Grid.Row="1" Margin="8,153,10,565"/>
        <Button Content="Click Me!" Padding="10,10,10,10" HorizontalAlignment="Center" VerticalAlignment="Center" Click="ButtonBase_OnClick" Grid.Row="1" />
        -->
    </Grid>
</Window>
